form {}

fieldset {
position: relative;
}

.fieldrow {
    background: none repeat scroll 0 0 white;
    border: 4px solid gray;
    display: block;
    margin-bottom: 6px;
    overflow: hidden;
    position: relative;
-o-border-radius: 6px 6px 6px 6px;
-icab-border-radius: 6px 6px 6px 6px;
-khtml-border-radius: 6px 6px 6px 6px;
-moz-border-radius: 6px 6px 6px 6px;
-webkit-border-radius: 6px 6px 6px 6px;
border-radius: 6px 6px 6px 6px;
}

label {
    background: none repeat scroll 0 0 gray;
    color: #666666;
    float: left;
    font-size: 15px;
    font-style: italic;
    height: 28px;
    line-height: 27px;
    margin-right: 6px;
    padding: 0 8px 0 4px;
    position: relative;
    width: auto;
}

label.for-boxes {
    background: none repeat scroll 0 0 #FFFFFF !important;
    border-bottom: 1px dashed gray;
    color: black !important;
    display: inline-block;
    float: none;
    height: 16px;
    line-height: 14px;
    margin: 4px 6px 7px 0;
    padding-right: 5px;
    top: 2px;
}

.wf-inactive label.for-boxes {
    margin-right: 0;
}

.fieldrow.textarea label {
    display: block;
    float: none;
    width: 98% !important;
}

input {
    border: medium none;
    margin: 0;
    padding: 0;
    position: relative;
}

select {
    color: black;
    display: block;
    font-family: Helvetica,Arial,sans-serif;
    font-size: 15px;
    font-style: italic;
    margin: 4px 0 5px 6px !important;
    position: relative;
    width: 100%;
}

input[type=text], input[type=number], input[type=date] {
    border-bottom: 1px dashed gray;
    color: black;
    display: block;
    font-family: Helvetica,Arial,sans-serif;
    font-size: 15px;
    font-style: italic;
    height: 18px;
    line-height: 24px;
    margin: 4px 0 5px 6px !important;
}

input[type=radio], input[type=checkbox] {
    left: 2px;
    margin-right: 5px !important;
    top: 0;
    z-index: 1;
}

.wf-inactive input[type=radio], .wf-inactive input[type=checkbox] {
    margin-right: 1px !important;
    top: 2px;
}

input[type=checkbox] {
    top: -1px;
}

input[type=file] {
    height: 100%;
    left: 0;
    opacity: 0;
    position: absolute;
    width: 100%;
    z-index: 10;
}

input::-webkit-input-placeholder {
    color: gray;
    opacity: 0.5;
}
input:-moz-placeholder {
    color: gray;
}

input.fake-file {
    position: absolute;
    width: 72%;
    z-index: 5;
}

input#phone-1, input#phone-2, input#phone-3, input#postal-1, input#postal-2 {
    margin-right: 4px;
    text-align: center;
    width: 35px;
}

input#phone-3, input#postal-1, input#postal-2 {
width:45px;
}

textarea {
    background: url("assets/BG-input.png") repeat scroll left -2px transparent;
    border: medium none;
    color: black;
    display: block;
    font-family: Helvetica,Arial,sans-serif;
    font-size: 15px;
    font-style: italic;
    line-height: 21px;
    margin: 2px 0 3px 6px !important;
    min-height: 126px;
    padding: 0;
    resize: none;
    width: 97.6% !important;
}
	
button, .btn { 
background-color: black;
    border: medium none;
    cursor: pointer;
    display: block;
    overflow: visible;
    padding: 1px;
    position: relative;
-o-border-radius: 2px 2px 2px 2px;
-icab-border-radius: 2px 2px 2px 2px;
-khtml-border-radius: 2px 2px 2px 2px;
-moz-border-radius: 2px 2px 2px 2px;
-webkit-border-radius: 2px 2px 2px 2px;
border-radius: 2px 2px 2px 2px;
}

button::-moz-focus-inner {
border: 0;  /* overrides extra padding in Firefox */
padding: 0;
margin: 0;
outline: none;
}

button span, .btn span { 
background-color: gray;
    color: black;
    display: block;
    font-family: Helvetica,Arial,sans-serif;
    font-size: 15px;
    font-weight: bold;
    height: 22px;
    line-height: 22px;
    margin: 0 !important;
    padding: 0 8px;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 0 white;
    text-transform: uppercase;
    top: 0;
    white-space: nowrap;
}

html.wf-inactive button span, html.wf-inactive .btn span {
    line-height: 26px;
}

@media screen and (-webkit-min-device-pixel-ratio:0) {
	/* Safari and Google Chrome only - fix margins */
	button span {
    margin-top: -1px;
	}
	label {
    line-height: 30px;
	}
}


/* Success, notice and error boxes
-------------------------------------------------------------- */


.fieldrow.error {
border: 4px solid red;
}

.fieldrow.error label {
background: red;
color: #ffffff;
}

tr.err {
	display: none;
}

tr.err th {
    background: none repeat scroll 0 0 red;
    border-bottom: 1px solid red;
    color: #FFFFFF;
    font-weight: normal;
    text-align: center;
}

table.error tr.err {
	display: table-row;
}


/* Inside tables
-------------------------------------------------------------- */

table select {
    display: inline;
    left: -6px;
    margin: 0 !important;
}

table input[type=text],
table input[type=number],
table input[type=date] {
    background: none repeat scroll 0 0 transparent;
    border: medium none;
    display: inline;
    margin: 0 !important;
}

table input[type=radio],
table input[type=checkbox] {
    left: 4px;
}

table label.for-boxes {
    border-bottom: medium none;
    display: inline;
    top: 0;
}